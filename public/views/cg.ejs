  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  
</head>
<body>

<div class="container">
  
  <p>Hey! awesome. you are creating a discussion group.</p>
  <form role="form">
    <div class="form-group">
      <label for="usr">Group Name:</label>
      <input type="text" class="form-control" id="usr" style="width:500px;align:middle" ng-model="gname">
    </div>
    <div class="form-group">
      <label for="comment">Description:</label>
  <textarea class="form-control" rows="5" id="comment" placeholder="About the group" style="width:500px" ng-model="gdesc"></textarea>
<br>
<div class="wrapper">
 <button type="submit" class="btn btn-info" value="Submit Button" style="align:center" ng-click="crtgrp()">Create</button>
</div>    
</div>
  </form>
</div>

